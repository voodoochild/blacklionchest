<%  // If a post is being displayed, work out the prev and next posts
  var isPost = current.path[0] === 'posts' && current.path[1] !== 'index';
  if (isPost) {
    var posts = Object.keys(public.posts._data).reverse();
    var index = posts.indexOf(current.source);
    var prevPost = posts[index - 1] || false;
    var nextPost = posts[index + 1] || false;
  }
%><!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="author" content="https://plus.google.com/u/0/106652029485012349674">
  <meta name="description" content="<%= description %>">
  <title><% if (typeof title !== 'undefined' && title.length) { %><%= title %> | <% } %><%= name %></title>
  <link href="/stylesheets/main.css" rel="stylesheet">
  <link href="//fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Open+Sans:700" rel="stylesheet">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <% if (isPost) { %><link rel="canonical" href="<%- url %>/posts/<%- current.source %>"><% } %>
  <% if (prevPost) { %><link rel="prev" href="/posts/<%= prevPost %>"><% } %>
  <% if (nextPost) { %><link rel="next" href="/posts/<%= nextPost %>"><% } %>
</head>
<body>
  <div id="banner">
    <div class="banner-wrap center">
      <a href="http://blacklionchest.co.uk" class="site-name h1" rel="home">
        <img class="logo" src="/images/lion.png" />
        <% if (isPost) { %>
          <%- name %>
        <% } else { %>
          <h1><%- name %></h1>
        <% } %>
      </a>
      <nav class="social">
        <a href="https://twitter.com/blacklionchest" target="_blank"><i class="fa fa-twitter"></i></a>
        <a href="http://www.twitch.tv/blacklionchest" target="_blank"><i class="fa fa-twitch"></i></a>
        <a href="https://github.com/voodoochild/blacklionchest" target="_blank"><i class="fa fa-github"></i></a>
        <a href="/feed.xml"><i class="fa fa-rss"></i></a>
      </nav>
    </div>
  </div>
  <% if (isPost) { %>
    <% var post = public.posts._data[current.source]; %>
    <% post.yield = partial("posts/" + current.source); %>
    <%- partial("posts/_decorator", {post: post, nextPost: nextPost, prevPost: prevPost}) %>
  <% } else { %>
    <%- yield %>
  <% } %>
  <script type="text/javascript">
    !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
  </script>
  <script type="text/javascript">
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-41267375-2', 'blacklionchest.co.uk');
    ga('send', 'pageview');
  </script>
</body>
</html>
