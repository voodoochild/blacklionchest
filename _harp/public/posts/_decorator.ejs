<article itemscope itemtype="http://schema.org/BlogPosting">
    <header>
        <h1 class="article-title" itemprop="name"><a rel="bookmark" href="/posts/<%- current.source %>"><%- title %></a></h1>
        <span class="posted-by">Posted by <b rel="author"><%- post.author %></b> on <time itemprop="datePublished"><%- post.published %></time></span>
    </header>
    <div itemprop="articleBody">
        <%- yield %>
    </div>
</article>
<nav class="posts-nav">
    <% if (nextPost) { %>
        <b>Next post:</b> <a href="/posts/<%= nextPost %>"><%- public.posts._data[nextPost].title %></a><br>
    <% } %>
    <% if (prevPost) { %>
        <b>Previous post:</b> <a href="/posts/<%= prevPost %>"><%- public.posts._data[prevPost].title %></a>
    <% } %>
</nav>
<div id="disqus_thread"></div>
<a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
<script type="text/javascript">
    var disqus_shortname = 'blacklionchest';
    var disqus_identifier = '<%- current.source %>';
    var disqus_title = '<%- post.title %>';
    var disqus_url = '<%- url %>/posts/<%- current.source %>';
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
