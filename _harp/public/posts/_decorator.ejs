<article itemscope itemtype="http://schema.org/BlogPosting">
    <header>
        <h1 class="article-title" itemprop="name"><a rel="bookmark" href="/posts/<%- current.source %>"><%- title %></a></h1>
        <span class="posted-by">Posted by <b rel="author"><%- post.author %></b> on <time itemprop="datePublished"><%- post.published %></time></span>
    </header>
    <div itemprop="articleBody">
        <%- yield %>
    </div>
    <footer>
        <div class="social">
            <span><a href="https://twitter.com/share" class="twitter-share-button" data-via="blacklionchest" data-count="none">Tweet</a></span>
            <span><div class="fb-share-button" data-href="<%- url %>/posts/<%- current.source %>" data-type="button"></div></span>
        </ul>
    </footer>
</article>
<nav class="posts-nav">
    <% if (nextPost) { %>
        <b>Next post:</b> <a href="/posts/<%= nextPost %>"><%- public.posts._data[nextPost].title %></a><br>
    <% } %>
    <% if (prevPost) { %>
        <b>Previous post:</b> <a href="/posts/<%= prevPost %>"><%- public.posts._data[prevPost].title %></a>
    <% } %>
</nav>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
